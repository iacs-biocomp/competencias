{
	"compilerOptions": {
		"lib": ["es5", "es6", "ES2017"],
		"target": "es2017",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"declaration": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"baseUrl": "./",
		"sourceMap": true,
		"incremental": true,
		"noImplicitReturns": true,
		"paths": {
			"sharedInterfaces/*": ["../sharedCode/interfaces/*"],
			"sharedCode/*": ["../sharedCode/*"],
			"tslib": ["./node-modules/tslib/tslib.d.ts"]
		}
	}
}
